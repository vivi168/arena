<%= semantic_form_for @gladiator do |f| %>
  <%= f.input :name %>
  <% if @gladiator.avatar.present? %>
    <%= image_tag @gladiator.avatar.url(:thumb) %>
  <% end %>
  <%= f.input :avatar %>
  <%= f.actions do %>
    <%= f.action :submit, as: :button, button_html: { class: 'btn btn-primary' } %>
  <% end %>
<% end %>
